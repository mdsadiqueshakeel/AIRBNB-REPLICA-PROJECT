<% layout("layouts/boilerplate") %>
<body>
<div class="row mt-3 ">
    <div class="col-8 offset-3">

    <h3>Listings Details</h3>
    <br>
    </div>
    <div class="card col-6 offset-3 show-card p-4 shadow-sm bg-light rounded">
        <img src="<%=listing.image.url || listing.image%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b>
                <%= listing.title %>
            </b><br>
            <%= listing.description %> <br>
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
        <br><br>
        
        <div class="btns">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  edit-btn">Edit</a>
    
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-dark  offset-4">Delete</button>
          </form>
        </div> 
    </div>
    

    </div>
    <br><br>
</body>